const songs = [
  {
    title: "Track One",
    artist: "Artist A",
    src: "assets/song1.mp3",
    cover: "assets/covers/song1.jpg",
    description: "A bright, genre-blending opener with layered textures that set an uplifting tone."
  },
  {
    title: "Track Two",
    artist: "Artist B",
    src: "assets/song2.mp3",
    cover: "assets/covers/song2.jpg",
    description: "Moody yet driven, this track rides deep basslines and crisp percussion."
  }
  // Add more tracks following this format
];

const audio = document.getElementById('audio');
const title = document.getElementById('title');
const artist = document.getElementById('artist');
const description = document.getElementById('description');
const cover = document.getElementById('cover');
const playlist = document.getElementById('playlist');

songs.forEach((song, index) => {
  const div = document.createElement('div');
  div.textContent = `${song.title} â€“ ${song.artist}`;
  div.addEventListener('click', () => loadTrack(index));
  playlist.appendChild(div);
});

function loadTrack(index) {
  const song = songs[index];
  audio.src = song.src;
  title.textContent = song.title;
  artist.textContent = song.artist;
  description.textContent = song.description;
  cover.src = song.cover || '';
  audio.play();
}

loadTrack(0);
# Music Player

1. Put your `.mp3` files into `assets/` and name them exactly as in `script.js`.
2. (Optional) Put cover images into `assets/covers/` with matching filenames.
3. Open `index.html` in a browser to test locally.
4. Upload to GitHub and enable GitHub Pages for a live player.
